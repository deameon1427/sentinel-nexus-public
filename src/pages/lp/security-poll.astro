---
import MarketingLayout from '../../layouts/MarketingLayout.astro';
import MarketingForm from '../../components/MarketingForm.astro';
import PollCard from '../../components/PollCard.astro';
---

<MarketingLayout
  title="AI Security Concern Poll | Sentinel Nexus"
  description="What's your biggest AI security concern in 2026? Answer one question and get a free 30-minute security review tailored to your answer."
>
  <section class="lp-section">
    <div class="lp-container">
      <div class="lp-intro">
        <p class="lp-eyebrow">2026 AI Security Pulse</p>
        <h1 class="lp-headline">What's your biggest AI security concern right now?</h1>
        <p class="lp-subtext">
          Answer one question — we'll instantly show you how to address it, and offer a free
          30-minute security review tailored to your response.
        </p>
      </div>

      <PollCard
        pollId="ai-security-concern-2026"
        question="Which AI security risk keeps you up at night?"
        followUpHeading="We specialize in exactly that. Book a free 30-minute review:"
        options={[
          { id: 'data-leakage', label: 'Sensitive data leaking into AI models or third-party APIs' },
          { id: 'prompt-injection', label: 'Prompt injection and adversarial attacks on AI agents' },
          { id: 'shadow-ai', label: 'Shadow AI — employees using unauthorized AI tools' },
          { id: 'compliance', label: 'Regulatory compliance (GDPR, EU AI Act, SOC 2)' },
        ]}
      >
        <MarketingForm
          heading=""
          ctaLabel="Book My Free Security Review"
          successMessage="Booked. We'll reach out within one business day with a tailored agenda."
        />
      </PollCard>

      <p class="lp-privacy">
        Your answer is anonymous until you submit the form.
        <a href="https://sentinel-nexus.com/privacy">Privacy Policy</a>.
      </p>
    </div>
  </section>
</MarketingLayout>

<style>
  .lp-section {
    padding: 4rem 0;
  }

  .lp-intro {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .lp-eyebrow {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .lp-headline {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    line-height: 1.25;
    margin-bottom: 1rem;
  }

  .lp-subtext {
    color: var(--color-text-muted);
    line-height: 1.7;
    font-size: 1.05rem;
    max-width: 560px;
    margin: 0 auto;
  }

  .lp-privacy {
    margin-top: 1.25rem;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    text-align: center;
  }

  .lp-privacy a {
    color: var(--color-text-muted);
    text-decoration: underline;
    text-underline-offset: 2px;
  }
</style>
